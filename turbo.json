{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["format"],
      "outputMode": "full"
    },
    "format": {
      "outputMode": "full"
    },
    "dev": {
      "outputMode": "full"
    }
  }
}
